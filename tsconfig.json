{
  "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "Node",
      "strict": true,
      "noImplicitAny": true,
      "declaration": false,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        "~/*": ["src/*"]
      }
  },
  "include": ["src"],
  "exclude": [
    "dist/**",
    "node_modules",
  ],
}